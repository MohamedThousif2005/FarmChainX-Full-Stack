package com.farmchainx.backend.repository;

import com.farmchainx.backend.entity.Product;
import com.farmchainx.backend.entity.User;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;
import java.util.List;

@Repository
public interface ProductRepository extends JpaRepository<Product, Long> {
    List<Product> findByDistributor(User distributor);
    List<Product> findByIsAvailableTrue();
    List<Product> findByDistributorAndIsAvailableTrue(User distributor);
    List<Product> findByCategoryAndIsAvailableTrue(String category);
    List<Product> findByNameContainingIgnoreCaseAndIsAvailableTrue(String name);
}