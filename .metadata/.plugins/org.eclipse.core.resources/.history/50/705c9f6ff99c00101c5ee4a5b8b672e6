package com.farmchainx.backend.repository;

import com.farmchainx.backend.entity.Product;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import java.util.List;

@Repository
public interface ProductRepository extends JpaRepository<Product, Long> {
    List<Product> findByDistributorId(Long distributorId);
    List<Product> findByIsAvailableTrue();
    List<Product> findByCategoryAndIsAvailableTrue(String category);
    List<Product> findByDistributorIdAndIsAvailableTrue(Long distributorId);
}